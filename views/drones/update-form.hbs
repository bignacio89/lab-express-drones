<h2>Update the drone</h2>

<form action="/drones/{{id}}/edit" method="POST">
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name" value="{{name}}">
    </div>
    <div class="mb-3">
        <label for="propellers" class="form-label">Number of Propellers</label>
        <input type="number" class="form-control" id="propellers" name="propellers" value="{{propellers}}">
    </div>
    <div class="mb-3">
        <label for="maxSpeed" class="form-label">Max Speed</label>
        <input type="number" class="form-control" id="maxSpeed" name="maxSpeed" value="{{maxSpeed}}">
    </div>

    <input type="hidden" name="book_id" value="{{id}}">

    <button type="submit" class="btn btn-primary">Save</button>
</form>